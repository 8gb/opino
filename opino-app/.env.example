# Supabase Configuration
# The URL of your Supabase project (Found in Project Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# The public 'anon' key for your Supabase project (Found in Project Settings > API)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key

# The secret 'service_role' key (Found in Project Settings > API)
# CRITICAL: This key has full admin access and bypasses RLS. Never expose this to the client.
# It is used by the API routes to manage data securely.
SUPABASE_SERVICE_ROLE_KEY=your-secret-service-role-key

# Security & Authentication
# Cloudflare Turnstile Site Key for captcha protection on login/signup forms
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key

# App Configuration
# Optional: The domain used for custom API routing in middleware.
# Example: api.opino.ongclement.com
API_DOMAIN=api.your-domain.com

# Optional: The domain used for CDN files (e.g. main.js).
# Requests to this domain will only serve allowed static files and 404 everything else.
# Example: cdn.opino.ongclement.com
CDN_DOMAIN=cdn.your-domain.com

UPSTASH_REDIS_REST_URL=your-redis-url                                                                                                       
UPSTASH_REDIS_REST_TOKEN=your-redis-token   